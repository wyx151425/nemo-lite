<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.rumofuture.nemolite.view.fragment.NemoMainMeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:paddingBottom="@dimen/activity_vertical_middle_margin"
        android:paddingEnd="@dimen/activity_horizontal_margin"
        android:paddingStart="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_middle_margin">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/my_avatar_view"
            android:layout_width="@dimen/nemo_main_me_circle_image_view_width"
            android:layout_height="@dimen/nemo_main_me_circle_image_view_width"
            android:background="@mipmap/ic_face_black_round"
            app:civ_border_color="@color/colorSilver"
            app:civ_border_width="0.1dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/activity_horizontal_middle_margin"
            android:orientation="vertical">

            <TextView
                android:id="@+id/my_name_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/prompt_user_name"
                android:maxLines="1"
                android:textColor="@color/colorBlack"
                android:textColorHint="@color/colorSilver"
                android:textSize="@dimen/nemo_text_standard_size"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/activity_vertical_min_margin"/>

            <TextView
                android:id="@+id/my_motto_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/prompt_user_motto"
                android:maxLines="1"
                android:textColorHint="@color/colorSilver"
                android:textSize="@dimen/nemo_text_small_size"/>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/colorSilver"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_vertical_light_margin"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/colorSilver"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:orientation="vertical"
        android:paddingEnd="@dimen/activity_horizontal_margin"
        android:paddingStart="@dimen/activity_horizontal_margin">

        <TextView
            android:id="@+id/my_info_view"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginStart="@dimen/activity_horizontal_light_margin"
            android:drawablePadding="@dimen/activity_horizontal_margin"
            android:drawableStart="@mipmap/ic_account_box_black_list"
            android:gravity="center_vertical"
            android:text="@string/prompt_my_info"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/nemo_text_standard_size"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="@color/colorSilver"/>

        <TextView
            android:id="@+id/my_book_list_view"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginStart="@dimen/activity_horizontal_light_margin"
            android:drawablePadding="@dimen/activity_horizontal_margin"
            android:drawableStart="@mipmap/ic_satellite_black_list"
            android:gravity="center_vertical"
            android:text="@string/prompt_my_books"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/nemo_text_standard_size"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="@color/colorSilver"/>

        <TextView
            android:id="@+id/my_setting_list_view"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginStart="@dimen/activity_horizontal_light_margin"
            android:drawablePadding="@dimen/activity_horizontal_margin"
            android:drawableStart="@mipmap/ic_settings_application_black_list"
            android:gravity="center_vertical"
            android:text="@string/prompt_my_settings"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/nemo_text_standard_size"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/colorSilver"/>
</LinearLayout>