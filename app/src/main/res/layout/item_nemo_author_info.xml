<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/activity_vertical_light_margin"
        android:layout_marginEnd="@dimen/activity_horizontal_light_margin"
        android:layout_marginStart="@dimen/activity_horizontal_light_margin"
        android:layout_marginTop="@dimen/activity_vertical_light_margin"
        app:cardCornerRadius="0dp"
        app:cardElevation="1dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <TextView
            android:id="@+id/author_profile_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="24dp"
            android:hint="@string/prompt_user_profile"
            android:lineSpacingExtra="@dimen/line_spacing_extra"
            android:textColorHint="@color/colorSilver"
            android:textSize="15sp"/>
    </android.support.v7.widget.CardView>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/colorSilver"/>
</LinearLayout>